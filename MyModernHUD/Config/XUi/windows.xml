<configs>

    <append xpath="/windows">
        <window name="modernHUDAtlas" width="512" height="512" texture="file://Resources/hud_modern.png" visible="false">
            <atlas name="atlas">
                <entry name="panel_bg"        x="10" y="10" width="140" height="50"/>
                <entry name="icon_health"     x="20" y="20" width="20"  height="20"/>
                <entry name="icon_stamina"    x="20" y="80" width="20"  height="20"/>
                <entry name="icon_food"       x="20" y="140" width="20" height="20"/>
                <entry name="icon_water"      x="20" y="200" width="20" height="20"/>
                <entry name="bar_health_fill" x="50" y="25" width="90"  height="10"/>
                <entry name="bar_stamina_fill"x="50" y="85" width="90"  height="10"/>
                <entry name="bar_food_fill"   x="50" y="145" width="90" height="10"/>
                <entry name="bar_water_fill"  x="50" y="205" width="90" height="10"/>
                <entry name="bar_xp_bg"       x="10" y="260" width="492" height="20"/>
                <entry name="bar_xp_fill"     x="10" y="260" width="240" height="20"/>
            </atlas>
        </window>
    </append>


    <remove xpath="/windows/window[@name='windowHUD']" />


    <append xpath="/windows">
        <window name="windowHUD" anchor="bottomleft" width="100%" height="100%" controller="PlayerStatsWindow">

            <rect name="playerStatsPanel" pos="20, 20" width="170" height="230">

                <rect name="health_panel" depth="1" pos="0, -0" width="140" height="50">
                    <sprite depth="2" name="background" sprite="panel_bg" atlas="modernHUDAtlas" color="[255,255,255,220]"/>
                    <sprite depth="3" name="icon" sprite="icon_health" atlas="modernHUDAtlas" pos="10, -10"/>
                    <filledsprite depth="4" name="bar" sprite="bar_health_fill" atlas="modernHUDAtlas" pos="40, -15" fill="{playerhealthfill}" type="fill" fill_dir="horizontal"/>
                    <label depth="5" name="value" pos="42, -28" width="88" height="20" text="{playerhealthcurrent} / {playerhealthmax}" font_size="16" effect="outline" justify="center"/>
                </rect>

                <rect name="stamina_panel" depth="1" pos="0, -60" width="140" height="50">
                    <sprite depth="2" name="background" sprite="panel_bg" atlas="modernHUDAtlas" color="[255,255,255,220]"/>
                    <sprite depth="3" name="icon" sprite="icon_stamina" atlas="modernHUDAtlas" pos="10, -10"/>
                    <filledsprite depth="4" name="bar" sprite="bar_stamina_fill" atlas="modernHUDAtlas" pos="40, -15" fill="{playerstaminafill}" type="fill" fill_dir="horizontal"/>
                    <label depth="5" name="value" pos="42, -28" width="88" height="20" text="{playerstaminacurrent} / {playerstaminamax}" font_size="16" effect="outline" justify="center"/>
                </rect>

                <rect name="food_panel" depth="1" pos="0, -120" width="140" height="50">
                    <sprite depth="2" name="background" sprite="panel_bg" atlas="modernHUDAtlas" color="[255,255,255,220]"/>
                    <sprite depth="3" name="icon" sprite="icon_food" atlas="modernHUDAtlas" pos="10, -10"/>
                    <filledsprite depth="4" name="bar" sprite="bar_food_fill" atlas="modernHUDAtlas" pos="40, -15" fill="{playerfoodfill}" type="fill" fill_dir="horizontal"/>
                    <label depth="5" name="value" pos="42, -28" width="88" height="20" text="{playerfoodcurrent}" font_size="16" effect="outline" justify="center"/>
                </rect>

                <rect name="water_panel" depth="1" pos="0, -180" width="140" height="50">
                    <sprite depth="2" name="background" sprite="panel_bg" atlas="modernHUDAtlas" color="[255,255,255,220]"/>
                    <sprite depth="3" name="icon" sprite="icon_water" atlas="modernHUDAtlas" pos="10, -10"/>
                    <filledsprite depth="4" name="bar" sprite="bar_water_fill" atlas="modernHUDAtlas" pos="40, -15" fill="{playerwaterfill}" type="fill" fill_dir="horizontal"/>
                    <label depth="5" name="value" pos="42, -28" width="88" height="20" text="{playerwatercurrent}" font_size="16" effect="outline" justify="center"/>
                </rect>

            </rect>

            <rect name="xpPanel" anchor="bottomcenter" pos="0, 10" width="492" height="20">
                <sprite depth="2" name="background" sprite="bar_xp_bg" atlas="modernHUDAtlas" color="[255,255,255,180]"/>
                <filledsprite depth="3" name="bar" sprite="bar_xp_fill" atlas="modernHUDAtlas" fill="{playerxpfill}" type="fill" fill_dir="horizontal"/>
                <label depth="4" name="value" width="492" height="20" text="Рівень {playerlevel}  ({playerxp}) " font_size="16" effect="outline" justify="center" color="[255,255,255,255]"/>
            </rect>

        </window>
    </append>
</configs>